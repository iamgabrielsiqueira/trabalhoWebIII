
<%= simple_form_for @room_type do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Add Room type' : 'Edit Room type', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
