
<%= simple_form_for @city do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :state %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Add City' : 'Edit City', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
