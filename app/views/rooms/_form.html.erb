
<%= simple_form_for @room do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.association :room_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Add Room' : 'Edit Room', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
