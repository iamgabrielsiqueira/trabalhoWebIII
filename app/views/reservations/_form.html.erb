
<%= simple_form_for @reservation do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%# <%= f.input :price %>
    <%# <%= f.input :description %>
    <%= f.association :room, include_blank: "Select a room" %>
    <%= f.association :user, include_blank: "Select a guest" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Reservation' : 'Atualizar Reservation', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
