<% content_for :title do %>
  Reservations
<% end %>

<div class="page-header">
  <h1>Reservations</h1>
  <%= link_to new_reservation_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Add Reservation
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Start date</th>
        <th>End date</th>
        <th>Duration</th>
        <th>Price</th>
        <th>Room</th>
        <th>Guest</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.start_date %></td>
          <td><%= reservation.end_date %></td>
          <td><%= distance_of_time_in_words(reservation.start_date, reservation.end_date) %></td>
          <td><%= reservation.price %></td>
          <td><%= reservation.room.number %></td>
          <td><%= reservation.user %></td>
          <td>
            <%= link_to reservation, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_reservation_path(reservation), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to reservation, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>